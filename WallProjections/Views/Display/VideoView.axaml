<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:WallProjections.Models"
             xmlns:display="clr-namespace:WallProjections.ViewModels.Interfaces.Display"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="display:IVideoViewModel"
             x:Class="WallProjections.Views.Display.VideoView">

    <models:NativeVideoView Name="VideoViewer"
                            x:Name="VideoViewer"
                            MediaPlayer="{Binding MediaPlayer}"
                            IsVisible="{Binding HasVideos, FallbackValue=False}"
                            SizeChanged="OnVideoViewResize"
                            Loaded="Control_OnLoaded"
    />
</UserControl>

