<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:WallProjections.ViewModels.Interfaces.Display"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WallProjections.Views.Display.DisplayWindow"
        x:DataType="vm:IDisplayViewModel"
        Icon="/Assets/app-icon.ico"
        Title="WallProjections"
        Classes="Projection"
        WindowState="FullScreen"
        Closing="Window_OnClosing"
        KeyDown="OnKeyDown">

    <TransitioningContentControl Content="{Binding ContentViewModel}">
        <TransitioningContentControl.PageTransition>
            <CrossFade Duration="0:00:00.250"/>
        </TransitioningContentControl.PageTransition>
    </TransitioningContentControl>

</Window>
