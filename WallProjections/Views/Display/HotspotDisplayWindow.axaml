<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:WallProjections.ViewModels.Interfaces.Display"
        xmlns:views="using:WallProjections.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WallProjections.Views.Display.HotspotDisplayWindow"
        x:DataType="vm:IHotspotViewModel"
        Title="HotspotDisplayWindow"
        Background="Black"
        KeyDown="OnKeyDown"
        Closing="OnClosing">

    <views:HotspotView Name="HotspotList"
                       HotspotFill="White"
                       HotspotStroke="LightGray"
                       ItemsSource="{Binding Projections}" />

</Window>
