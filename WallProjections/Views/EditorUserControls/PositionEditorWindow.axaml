    <!-- Mapping coordinates onto the display  -->
    <ItemsControl ItemsSource="{Binding UnselectedHotspotsList}">
    
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas Background="Transparent" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <!-- <TextBlock Foreground="White" Text="{Binding R}"></TextBlock> -->
                <Ellipse Height="{Binding R}"
                         Width="{Binding R}"
    
                         Fill="White"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    
        <!-- Styles for ItemsControl (all circles rather than individual) -->
        <ItemsControl.Styles>
            <!-- Positioning of the hotspots -->
            <Style Selector="ItemsControl > ContentPresenter" x:DataType="md:Coord">
                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                <Setter Property="Canvas.Left" Value="{Binding X}" />
            </Style>
        </ItemsControl.Styles>
    </ItemsControl>
    
