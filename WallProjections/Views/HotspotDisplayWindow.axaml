<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:WallProjections.ViewModels.Interfaces"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WallProjections.Views.HotspotDisplayWindow"
        x:DataType="vm:IHotspotViewModel"
        Title="HotspotDisplayWindow">
    
    <!--TODO change radius to diameter -->
        <!--TODO implement non hard coded values-->
        <Window.Styles>
            <Style Selector="Rectangle.white">
                <Setter Property="Height" Value="100"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Fill" Value="White"/>
                <Setter Property="RadiusX" Value="50"/>
                <Setter Property="RadiusY" Value="50"/>
                <Style.Animations>
                    <Animation Duration="0:0:1" Delay="0:0:3" PlaybackDirection="AlternateReverse" IterationCount="INFINITE"> 
                        <KeyFrame Cue="0%">
                            <Setter Property="Height" Value="125"/>
                            <Setter Property="Width" Value="125"/>
                            <Setter Property="RadiusX" Value="62.5"/>
                            <Setter Property="RadiusY" Value="62.5"/>
                        </KeyFrame>
                        <KeyFrame Cue="100%">
                            <Setter Property="Height" Value="100"/>
                            <Setter Property="Width" Value="100"/>
                            <Setter Property="RadiusX" Value="50"/>
                            <Setter Property="RadiusY" Value="50"/>
                        </KeyFrame>
                    </Animation>
                </Style.Animations>
            </Style>
        </Window.Styles>
    
    
        <Canvas Background="Black">
            <ItemsControl ItemsSource="{Binding Coordinates}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Classes="white" Canvas.Left="{Binding X}" Canvas.Top="{Binding Y}"/>            
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
        
</Window>
