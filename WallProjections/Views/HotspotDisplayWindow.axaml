<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:WallProjections.ViewModels.Interfaces.Display"
        xmlns:models="using:WallProjections.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WallProjections.Views.HotspotDisplayWindow"
        x:DataType="vm:IHotspotViewModel"
        Title="HotspotDisplayWindow">

    <!-- Styles relating to hotspot (ellipse) activation -->
    <Window.Styles>
        <!-- active animation -->
        <Style Selector="Ellipse.triggered" x:DataType="models:HotspotProjection">
            <Style.Animations>
                <Animation Duration="0:0:1" Delay="0:0:5" PlaybackDirection="AlternateReverse"
                           IterationCount="INFINITE">
                    <KeyFrame Cue="0%">
                        <Setter Property="(ScaleTransform.ScaleX)" Value="1" />
                        <Setter Property="(ScaleTransform.ScaleY)" Value="1" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="(ScaleTransform.ScaleX)" Value="1.25" />
                        <Setter Property="(ScaleTransform.ScaleY)" Value="1.25" />
                        <Setter Property="StrokeThickness" Value="0" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- activating animation -->
        <Style Selector="Ellipse.activating" x:DataType="models:HotspotProjection">
            <Style.Animations>
                <Animation Duration="0:0:5">
                    <KeyFrame Cue="70%">
                        <Setter Property="StrokeThickness" Value="10" />
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="StrokeThickness" Value="0" />
                        <Setter Property="(ScaleTransform.ScaleX)" Value="1.25" />
                        <Setter Property="(ScaleTransform.ScaleY)" Value="1.25" />
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Window.Styles>

    <!-- Mapping coordinates onto the display  -->
    <ItemsControl Name="HotspotList"
                  ItemsSource="{Binding Projections}">

        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas Background="Transparent" />
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Ellipse Height="{Binding D}"
                         Width="{Binding D}"
                         Fill="White"
                         Stroke="LightGray"

                         Classes.activating="{Binding IsActive}"
                         Classes.triggered="{Binding IsActive}">

                    <Ellipse.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                        </TransformGroup>
                    </Ellipse.RenderTransform>
                </Ellipse>
            </DataTemplate>
        </ItemsControl.ItemTemplate>

        <!-- Styles for ItemsControl (all circles rather than individual) -->
        <ItemsControl.Styles>
            <Style Selector="ItemsControl">
                <Setter Property="IsVisible" Value="{Binding IsVisible}" />
                <Setter Property="Opacity" Value="0.0" />
                <Setter Property="Transitions">
                    <Transitions>
                        <DoubleTransition Property="Opacity" Duration="0:0:3" />
                    </Transitions>
                </Setter>
            </Style>

            <Style Selector="ItemsControl[IsVisible=True]">
                <Setter Property="Opacity" Value="1.0" />
            </Style>

            <!-- Positioning of the hotspots -->
            <Style Selector="ItemsControl > ContentPresenter" x:DataType="models:HotspotProjection">
                <Setter Property="Canvas.Top" Value="{Binding Y}" />
                <Setter Property="Canvas.Left" Value="{Binding X}" />
            </Style>
        </ItemsControl.Styles>
    </ItemsControl>
</Window>
