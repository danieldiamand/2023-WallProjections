<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WallProjections.ViewModels.Interfaces"
             xmlns:views="clr-namespace:WallProjections.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WallProjections.Views.DisplayView"
             x:DataType="vm:IDisplayViewModel">

    <!--TODO Remove testing background colors -->
    <Grid ColumnDefinitions="*, *" RowDefinitions="*, 2*, *"
          Background="Blue">
        <TextBlock Grid.Column="0" Grid.Row="0" Grid.RowSpan="3"
                   Name="Description"
                   Background="Aqua"
                   Text="{Binding Description}" />
        <views:VideoView Grid.Column="1" Grid.Row="1"
                         Name="VideoView"
                         Background="Red"
                         DataContext="{Binding VideoViewModel}" />
    </Grid>
</UserControl>
